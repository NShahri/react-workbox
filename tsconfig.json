{
  "compilerOptions": {
    "outDir": "build/es",
    "module": "ES2020",
    "target": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["es2015", "dom", "es2016", "es2017", "es2019"],
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule": true,
    //    "noEmitHelpers": true,
    "jsx": "react",
    "sourceMap": false,
    "allowJs": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": []
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "src/**/*.test.ts"]
}
